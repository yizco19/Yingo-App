<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/end"
        motion:duration="1000">

        <!-- Aquí definirías los elementos que quieres animar -->
        <OnSwipe
            motion:touchAnchorId="@id/buttonAddToCart"
            motion:touchAnchorSide="left"
            motion:dragDirection="dragUp"
            motion:moveWhenScrollAtTop="true"
            motion:touchRegionId="@id/buttonAddToCart"
            motion:maxVelocity="5"
            motion:touchAnchorPos="0.1" />

    </Transition>

    <!-- Define los conjuntos de restricciones para los estados inicial y final -->
    <ConstraintSet android:id="@+id/start">
        <!-- Definir las restricciones iniciales de los elementos -->
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <!-- Definir las restricciones finales de los elementos -->
    </ConstraintSet>

</MotionScene>
